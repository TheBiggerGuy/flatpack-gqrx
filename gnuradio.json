{
  "name": "gnuradio",
  "cmake": true,
  "_comment": "https://github.com/csete/gqrx/blob/master/CMakeLists.txt#L103",
  "config-opts": [
    "-DCMAKE_BUILD_TYPE=Release",
    "-DENABLE_TESTING:BOOL=OFF",
    "-DCMAKE_INSTALL_LIBDIR=lib",
    "-DENABLE_INTERNAL_VOLK:BOOL=OFF",
    "-DENABLE_GR_ANALOG:BOOL=ON",
    "-DENABLE_GR_AUDIO:BOOL=ON",
    "-DENABLE_GR_BLOCKS:BOOL=ON",
    "-DENABLE_GR_DIGITAL:BOOL=ON",
    "-DENABLE_GR_FILTER:BOOL=ON",
    "-DENABLE_GR_FFT:BOOL=ON"
  ],
  "make-args": [
    "-j4"
  ],
  "sources": [
    {
      "type": "archive",
      "url": "http://gnuradio.org/releases/gnuradio/gnuradio-3.7.10.1.tar.gz",
      "sha256": "63d7b65cc4abe22f47b8f41caaf7370a0a502b91e36e29901ba03e8838ab4937"
    }
  ],
  "modules": [
    "swig.json",
    "volk.json",
    {
      "name": "lxml",
      "no-autogen": true,
      "sources": [
        {
          "type": "archive",
          "url": "https://pypi.python.org/packages/66/45/f11fc376f784c6f2e77ffc7a9d02374ff3ceb07ede8c56f918939409577c/lxml-3.7.2.tar.gz",
          "sha256": "59d9176360dbc3919e9d4bfca85c1ca64ab4f4ee00e6f119d7150ba887e3410a"
        },
        {
          "type": "shell",
          "commands": [
            "echo 'all:\n\ninstall:\n\tpython ./setup.py install --prefix=/app' > makefile"
          ]
        }
      ]
    },
    {
      "name": "fftw",
      "config-opts": [
        "--enable-shared",
        "--enable-single",
        "--enable-float",
        "--enable-sse",
        "--enable-sse2",
        "--enable-avx",
        "--enable-avx2",
        "--enable-avx512",
        "--enable-avx-128-fma"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://www.fftw.org/fftw-3.3.6-pl1.tar.gz",
          "sha256": "1ef4aa8427d9785839bc767f3eb6a84fcb5e9a37c31ed77a04e7e047519a183d"
        }
      ]
    }
  ],
  "builddir": true
}